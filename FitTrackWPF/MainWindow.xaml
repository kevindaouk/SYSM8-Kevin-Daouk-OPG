<Window x:Class="FitTrackWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitTrackWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Source="Images/TrainingImage4.jpg" Margin="131,87,131,-21"/>
        <StackPanel>
            <Label Content="FitTrack" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="60" FontFamily="Candara" FontWeight="Bold"/>
            <Label Content="Username" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtBoxUsername" TextWrapping="Wrap" Text="" Width="120"/>
            <Label Content="Password" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtBoxPassword" TextWrapping="Wrap" Text="" Width="120"/>
            <Button Content="Sign in" HorizontalAlignment="Center" Click="BtnSignIn"/>
            <Button Content="Register" HorizontalAlignment="Center" Click="BtnRegister"/>

        </StackPanel>
    </Grid>
</Window>
